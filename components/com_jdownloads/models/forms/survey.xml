<?xml version="1.0" encoding="utf-8"?>
	<!--
		$Id: survey.xml - view customer survey form
	-->
<form>

    <fieldset addfieldpath="/administrator/components/com_jdownloads/models/fields"></fieldset>

		<field name="id" 
            type="hidden"
            class="readonly" />

		<field name="title" 
            type="hidden" 
            readonly="true" 
            class="readonly" />

        <field name="url_download" 
            type="hidden" 
            readonly="true" 
            class="readonly" />

        <field name="catid" 
            type="hidden"
            class="readonly" />

        <field name="cat_title" 
            type="hidden" 
            readonly="true" 
            class="readonly" />

        <field name="name"
            type="text"
            class="inputbox" 
            size="40"            
            filter="string"
            label="COM_JDOWNLOADS_SURVEY_NAME_LABEL"
            description=""
            required="false" />  

        <field name="company"
            type="text"
            class="inputbox" 
            size="40"            
            filter="string"
            label="COM_JDOWNLOADS_SURVEY_COMPANY_LABEL"
            description=""
            required="false" />

        <field name="country"
            type="text"
            class="inputbox" 
            size="40"            
            filter="string"
            label="COM_JDOWNLOADS_SURVEY_COUNTRY_LABEL"
            description=""
            required="false" />
			
        <field name="address"
            type="textarea"
            class="inputbox" 
            size="40"            
            filter="string"
            label="COM_JDOWNLOADS_SURVEY_ADDRESS_LABEL"
            description=""
            required="false" />
            
        <field name="email"
            type="text"
            class="inputbox" 
            size="40"            
            filter="string"
            label="COM_JDOWNLOADS_SURVEY_EMAIL_LABEL"
            description="" 
            required="false" />
  
    </form>